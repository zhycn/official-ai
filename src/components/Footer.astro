---
// 底部工具栏组件
import { getLocale, t } from '../i18n/locales';

const locale = getLocale();
---

<footer class="mt-auto border-t border-gray-200/50 dark:border-gray-800/50 bg-white/50 dark:bg-gray-900/50 backdrop-blur-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <div class="text-sm font-medium text-gray-500 dark:text-gray-400">
        <span class="inline-flex items-center gap-1.5">
          <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
          {t('footer.version', locale)}
        </span>
      </div>
      <div class="text-sm text-gray-500 dark:text-gray-400">
        {t('footer.copyright', locale)} | {t('footer.builtBy', locale)}
      </div>
    </div>
  </div>
</footer>
