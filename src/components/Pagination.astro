---
import { getLocaleFromRequest, t } from '../i18n/locales';

interface Props {
  currentPage: number;
  totalPages: number;
}

const { currentPage, totalPages } = Astro.props;
const locale = getLocaleFromRequest(Astro.request);
---

<div class="flex flex-col sm:flex-row items-center justify-between gap-4 sm:gap-0 mt-8 sm:mt-12 pt-6 sm:pt-8 border-t border-gray-200/60 dark:border-gray-800/60">
  <div class="text-sm sm:text-base font-medium text-gray-600 dark:text-gray-400">
    {t('pagination.page', locale)} <span class="font-semibold text-gray-900 dark:text-white">{currentPage}</span> / <span class="font-semibold text-gray-900 dark:text-white">{totalPages}</span>
  </div>
  <div class="flex gap-3">
    <button
      id="prev-page"
      disabled={currentPage === 1}
      class="px-5 py-2.5 text-sm font-medium text-gray-700 dark:text-gray-200 bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm border border-gray-300/60 dark:border-gray-700/60 rounded-xl hover:bg-gray-50/80 dark:hover:bg-gray-700/80 hover:border-gray-400 dark:hover:border-gray-600 hover:shadow-md disabled:opacity-40 disabled:cursor-not-allowed disabled:hover:bg-white/80 disabled:hover:border-gray-300/60 dark:disabled:hover:bg-gray-800/80 dark:disabled:hover:border-gray-700/60 transition-all duration-300 hover:scale-105 active:scale-95 touch-manipulation"
    >
      {t('pagination.prev', locale)}
    </button>
    <button
      id="next-page"
      disabled={currentPage === totalPages}
      class="px-5 py-2.5 text-sm font-medium text-gray-700 dark:text-gray-200 bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm border border-gray-300/60 dark:border-gray-700/60 rounded-xl hover:bg-gray-50/80 dark:hover:bg-gray-700/80 hover:border-gray-400 dark:hover:border-gray-600 hover:shadow-md disabled:opacity-40 disabled:cursor-not-allowed disabled:hover:bg-white/80 disabled:hover:border-gray-300/60 dark:disabled:hover:bg-gray-800/80 dark:disabled:hover:border-gray-700/60 transition-all duration-300 hover:scale-105 active:scale-95 touch-manipulation"
    >
      {t('pagination.next', locale)}
    </button>
  </div>
</div>
