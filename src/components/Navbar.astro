---
// 顶部导航栏组件
import SearchBox from './SearchBox.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<nav class="sticky top-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200/50 dark:border-gray-800/50 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-xl font-bold text-gray-900 dark:text-white">
          skill<span class="underline">0</span>_
        </a>
      </div>

      <!-- 搜索框 -->
      <SearchBox />

      <!-- 右侧功能区 -->
      <div class="flex items-center space-x-3">
        <!-- 主题切换按钮 -->
        <ThemeToggle />

        <!-- 语言选择 -->
        <div class="px-3 py-1.5 rounded-lg text-sm font-medium text-gray-600 dark:text-gray-300 bg-gray-50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700">
          ZH
        </div>

        <!-- 登录按钮 -->
        <button class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-200 bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg transition-all duration-200 hover:scale-105 active:scale-95">
          登录
        </button>
      </div>
    </div>
  </div>
</nav>

