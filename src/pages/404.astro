---
import Layout from '../layouts/Layout.astro';
import { getLocale, t } from '../i18n/locales';

const locale = getLocale();
---

<Layout title={`404 - ${t('notFound.title', locale)}`}>
  <div class="min-h-screen flex flex-col bg-white dark:bg-gray-900">
    <div class="flex-1 flex items-center justify-center px-4 sm:px-6 lg:px-8 py-12 sm:py-16">
      <div class="max-w-lg w-full text-center">
        <!-- 404 数字 - ProductHunt 风格 -->
        <div class="mb-6 sm:mb-8">
          <h1 class="text-7xl sm:text-8xl lg:text-9xl font-bold text-gray-300 dark:text-gray-800 select-none leading-none tracking-tighter">
            404
          </h1>
        </div>
        
        <!-- 错误信息 - 简洁现代 -->
        <div class="mb-8 sm:mb-10">
          <h2 
            id="not-found-title"
            class="text-2xl sm:text-3xl font-semibold text-gray-900 dark:text-white mb-3 sm:mb-4 tracking-tight"
          >
            {t('notFound.title', locale)}
          </h2>
          <p 
            id="not-found-description"
            class="text-base sm:text-lg text-gray-600 dark:text-gray-400 leading-relaxed max-w-md mx-auto"
          >
            {t('notFound.description', locale)}
          </p>
        </div>
        
        <!-- 操作按钮 - ProductHunt 风格（橙色主题） -->
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center">
          <a
            href="/"
            class="inline-flex items-center justify-center px-6 py-2.5 sm:px-7 sm:py-3 text-sm sm:text-base font-medium text-white bg-[#FF6154] hover:bg-[#FF4D3D] dark:bg-[#FF6154] dark:hover:bg-[#FF4D3D] rounded-lg transition-all duration-200 hover:shadow-md active:scale-95 touch-manipulation"
          >
            <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span id="back-home-text">{t('notFound.backHome', locale)}</span>
          </a>
          
          <button
            onclick="window.history.back()"
            class="inline-flex items-center justify-center px-6 py-2.5 sm:px-7 sm:py-3 text-sm sm:text-base font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-all duration-200 hover:shadow-sm active:scale-95 touch-manipulation"
          >
            <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            <span id="go-back-text">{t('notFound.goBack', locale)}</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // 国际化翻译
  const translations = {
    zh: {
      title: '页面未找到',
      description: '抱歉，您访问的页面不存在或已被移除。',
      backHome: '返回首页',
      goBack: '返回上一页',
    },
    en: {
      title: 'Page Not Found',
      description: 'Sorry, the page you are looking for does not exist or has been removed.',
      backHome: 'Back to Home',
      goBack: 'Go Back',
    },
  };
  
  // 获取当前语言
  function getLocale() {
    return localStorage.getItem('locale') || 'zh';
  }
  
  // 更新页面文本
  function updatePageText(locale) {
    const t = translations[locale] || translations.zh;
    
    const titleEl = document.getElementById('not-found-title');
    const descEl = document.getElementById('not-found-description');
    const backHomeEl = document.getElementById('back-home-text');
    const goBackEl = document.getElementById('go-back-text');
    
    if (titleEl) titleEl.textContent = t.title;
    if (descEl) descEl.textContent = t.description;
    if (backHomeEl) backHomeEl.textContent = t.backHome;
    if (goBackEl) goBackEl.textContent = t.goBack;
  }
  
  // 监听语言变更事件
  window.addEventListener('localechange', function(e) {
    const locale = e.detail?.locale || getLocale();
    updatePageText(locale);
  });
  
  // 初始化时更新文本（处理客户端渲染）
  if (typeof window !== 'undefined') {
    updatePageText(getLocale());
  }
</script>
