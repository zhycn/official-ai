---
import Layout from '../layouts/Layout.astro';
import { getLocale, t } from '../i18n/locales';

const locale = getLocale();
---

<Layout title="404 - Page Not Found">
  <div class="min-h-screen flex flex-col bg-gradient-to-br from-gray-50 via-white to-gray-50/50 dark:from-gray-950 dark:via-gray-900 dark:to-gray-950/50">
    <div class="flex-1 flex items-center justify-center px-4 sm:px-6 lg:px-8 py-12 sm:py-16">
      <div class="max-w-md w-full text-center">
        <!-- 404 数字 -->
        <div class="mb-8 sm:mb-12">
          <h1 class="text-8xl sm:text-9xl lg:text-[12rem] font-bold text-gray-200/80 dark:text-gray-800/80 select-none leading-none tracking-tight">
            404
          </h1>
        </div>
        
        <!-- 错误信息 -->
        <div class="mb-8 sm:mb-12">
          <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white mb-4 sm:mb-6 tracking-tight">
            {locale === 'zh' ? '页面未找到' : 'Page Not Found'}
          </h2>
          <p class="text-base sm:text-lg text-gray-600 dark:text-gray-400 leading-relaxed">
            {locale === 'zh' 
              ? '抱歉，您访问的页面不存在或已被移除。' 
              : 'Sorry, the page you are looking for does not exist or has been removed.'}
          </p>
        </div>
        
        <!-- 操作按钮 -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/"
            class="inline-flex items-center justify-center px-6 py-3 sm:px-8 sm:py-3.5 text-base font-medium text-white bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 rounded-xl transition-all duration-300 hover:scale-105 active:scale-95 shadow-lg hover:shadow-xl touch-manipulation"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            {locale === 'zh' ? '返回首页' : 'Back to Home'}
          </a>
          
          <button
            onclick="window.history.back()"
            class="inline-flex items-center justify-center px-6 py-3 sm:px-8 sm:py-3.5 text-base font-medium text-gray-700 dark:text-gray-200 bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm border border-gray-300/60 dark:border-gray-700/60 hover:bg-gray-50/80 dark:hover:bg-gray-700/80 rounded-xl transition-all duration-300 hover:scale-105 active:scale-95 hover:shadow-md touch-manipulation"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            {locale === 'zh' ? '返回上一页' : 'Go Back'}
          </button>
        </div>
        
        <!-- 装饰性图标 -->
        <div class="mt-12 sm:mt-16 opacity-20">
          <svg class="w-24 h-24 sm:w-32 sm:h-32 mx-auto text-gray-400 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
    </div>
  </div>
</Layout>
